{
  "name": "chess-hawk",
  "version": "3.0.0",
  "description": "Chess Hawk - Tactical chess training application with TypeScript + modern architecture",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/lib/chess-hawk.es.js",
      "require": "./dist/lib/chess-hawk.umd.js",
      "types": "./dist/lib/index.d.ts"
    }
  },
  "main": "./dist/lib/chess-hawk.umd.js",
  "module": "./dist/lib/chess-hawk.es.js",
  "types": "./dist/lib/index.d.ts",
  "files": [
    "dist/lib",
    "dist/types.d.ts",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:lib": "vite build --config vite.config.lib.ts",
    "preview": "vite preview",
    "start": "npm run dev",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest --coverage",
    "lint": "tsc --noEmit --skipLibCheck",
    "analyze": "tsx scripts/analyze-puzzle-quality.ts",
    "import:lichess": "node scripts/robust-lichess-import.mjs",
    "docker:dev": "./scripts/docker-dev.sh dev",
    "docker:test": "./scripts/docker-dev.sh test",
    "docker:prod": "./scripts/docker-dev.sh prod",
    "docker:build": "./scripts/docker-dev.sh build",
    "docker:clean": "./scripts/docker-dev.sh clean"
  },
  "keywords": [
    "chess",
    "tactics",
    "training",
    "puzzle",
    "game",
    "education",
    "typescript",
    "vite"
  ],
  "author": "Chess Hawk Development Team",
  "license": "MIT",
  "dependencies": {
    "@chrisoakman/chessboardjs": "^1.0.0",
    "chess.js": "^1.3.1",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/jquery": "^3.5.29",
    "@types/node": "^24.0.0",
    "@vitejs/plugin-legacy": "^5.2.0",
    "@vitest/coverage-v8": "^1.2.2",
    "@vitest/ui": "^1.2.2",
    "tsx": "^4.7.0",
    "typescript": "^5.8.3",
    "vite": "^5.4.19",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^1.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
