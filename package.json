{
  "name": "chess-hawk",
  "version": "2.0.0",
  "description": "Chess Hawk - Tactical chess training application with Vite + TypeScript",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "start": "npm run dev",
    "serve": "npm run preview",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint . --ext ts,js,tsx,jsx --report-unused-disable-directives --max-warnings 0"
  },
  "keywords": [
    "chess",
    "tactics",
    "training",
    "puzzle",
    "game",
    "education",
    "typescript",
    "vite"
  ],
  "author": "Chess Hawk Development Team",
  "license": "MIT",
  "dependencies": {
    "@chrisoakman/chessboardjs": "^1.0.0",
    "chess.js": "^1.3.1"
  },
  "devDependencies": {
    "@types/jquery": "^3.5.29",
    "@types/node": "^24.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-legacy": "^5.2.0",
    "eslint": "^8.56.0",
    "typescript": "^5.8.3",
    "vite": "^5.4.19",
    "vitest": "^1.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
